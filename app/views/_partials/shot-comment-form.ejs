<form role="form" method="post" action="<%= url %>/comment" enctype="multipart/form-data">
  <div class="form-group row">
    <div class="col-md-6">
      <label for="i-description">Beschreibung</label>
      <p class="help-block">Du kannst hier <a href="#">Markdown</a> verwenden.</p>
      <textarea name="text" id="i-description" class="form-control" tabindex="2" required></textarea>
    </div>
  </div>
  <button type="submit" class="btn btn-default">Kommentieren</button>
</form>